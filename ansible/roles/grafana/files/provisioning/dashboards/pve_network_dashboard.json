{
  "title": "PVE Network Overview",
  "panels": [
    {
      "type": "timeseries",
      "title": "Network In (Mb/s)",
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device=~\"eno1|eno2|vmbr0|vmbr1|vmbr2|vpn0\"}[1m]) * 8 / 1000000",
          "legendFormat": "{{instance}} - {{device}}"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Network Out (Mb/s)",
      "targets": [
        {
          "expr": "rate(node_network_transmit_bytes_total{device=~\"eno1|eno2|vmbr0|vmbr1|vmbr2|vpn0\"}[1m]) * 8 / 1000000",
          "legendFormat": "{{instance}} - {{device}}"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Packets Received/s",
      "targets": [
        {
          "expr": "rate(node_network_receive_packets_total{device=~\"eno1|eno2|vmbr0|vmbr1|vmbr2|vpn0\"}[1m])",
          "legendFormat": "{{instance}} - {{device}}"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 12,
        "h": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Packets Transmitted/s",
      "targets": [
        {
          "expr": "rate(node_network_transmit_packets_total{device=~\"eno1|eno2|vmbr0|vmbr1|vmbr2|vpn0\"}[1m])",
          "legendFormat": "{{instance}} - {{device}}"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": {
        "x": 12,
        "y": 8,
        "w": 12,
        "h": 8
      }
    }
  ],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "10s"
}
